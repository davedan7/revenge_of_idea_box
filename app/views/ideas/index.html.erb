<div class="container">

  <h3 class="center">New Idea</h3>
  <form class="center col s4 offset-s4">
    <div class="row">
      <div class="center col s4 offset-s4">
        <input type="text" placeholder="Title" id="newIdeaTitle">
        <input type="text" placeholder="Body" id="newIdeaBody">
        <input type="submit" value="Save" class="btn btn-small centered" id="newIdea">
      </div>
    </div>
  </form>

  <h3 class="small-3 small-centered text-center columns">Your Ideas</h3>
    <div class="allIdeas row">
      <% @ideas.each do |idea|  %>
          <div class="col s12 m6 idea" data-id='<%= idea.id %>'>
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title" ><%= idea.title %></span>
                <p><strong>Description:</strong> <span class="ideaBody"><%= idea.body %></span></p>
                <p class="brother"><strong>Quality:</strong> <span class="ideaQuality"><%= idea.quality %></span></p>
                <a href="" class="thumbsUp">Like</a>
                <a href="" class="thumbsDown">Dislike</a>
              </div>
              <div class="card-action">
                <a href="" class="deleteIdea">Delete</a>
                <a href="#modal1" class="editIdea modal-trigger">Edit Idea</a>
              </div>
            </div>
          </div>
      <% end %>
    </div>

      <!-- Modal Trigger -->
  <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Modal Header</h4>
      <p>A bunch of text</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>

</div>
