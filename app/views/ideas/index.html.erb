 <nav>
    <div class="nav-wrapper cyan z-depth-1">
      <a href="/" class="brand-logo center">Idea Box</a>
    </div>
  </nav>

<div class="container">

  <h3 class="center">New Idea</h5>
  <form class="center col s4 offset-s4">
    <div class="row">
      <div class="center col s4 offset-s4">
        <input type="text" placeholder="Title" id="newIdeaTitle">
        <!-- <input type="text" placeholder="Body" id="newIdeaBody"> -->
        <div class="input-field cols4 offset-s4">
          <textarea id="textarea1" class="materialize-textarea newIdeaBody"></textarea>
          <label for="textarea1">body</label>
        </div>
        <input type="submit" value="Save" class="btn btn-small centered cyan" id="newIdea">
      </div>
    </div>
  </form>

  <h3 class="center">Your Ideas</h3>
  <div class="allIdeas row">
    <% @ideas.each do |idea|  %>
        <div class="col s12 m6 idea" data-id='<%= idea.id %>'>
          <div class="card blue-grey darken-1 z-depth-3">
            <div class="card-content white-text">
              <span class="card-title" ><%= idea.title %></span>
              <p><strong>Description:</strong> <span class="ideaBody"><%= idea.body %></span></p>
              <p class="brother"><strong>Quality:</strong> <span class="ideaQuality"><%= idea.quality %></span></p>
              <a href="" class="thumbsUp">Like</a>
              <a href="" class="thumbsDown">Dislike</a>
            </div>
            <div class="card-action">
              <a href="" class="deleteIdea">Delete</a>
              <a href="#modal1" class="editIdea modal-trigger">Edit Idea</a>
            </div>
          </div>
        </div>
    <% end %>
  </div>


  <!-- Edit Modal -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <form class="center col s4 offset-s4">
        <div class="row">
          <div class="center col s4 offset-s4">
            <input type="text" placeholder="Title" id="editIdeaTitle">
            <!-- <input type="text" placeholder="Body" id="newIdeaBody"> -->
            <div class="input-field cols4 offset-s4">
              <textarea id="textarea1" class="materialize-textarea editIdeaBody"></textarea>
              <label for="textarea1">body</label>
            </div>
            <input type="submit" value="Save" class="btn btn-small centered cyan" id="saveEditIdea">
          </div>
        </div>
      </form>
    </div>
  </div>

</div>
